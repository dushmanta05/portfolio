---
import type { CollectionEntry } from 'astro:content';
import GradientPlaceholder from '@components/GradientPlaceholder.astro';

interface Props {
  project: CollectionEntry<'work'>;
}

const { data, slug } = Astro.props.project;
---

<a class='card' href={`/work/${slug}`}>
  <div class='card-image'>
    <GradientPlaceholder title={data.title} size='small' alt={data.img_alt || data.title} />
  </div>
  <div class='card-content'>
    <h3 class='title'>{data.title}</h3>
    <p class='description'>{data.description}</p>
    <div class='tech-stack'>
      {
        data.tags &&
          Array.isArray(data.tags) &&
          data.tags.map((tag) => <span class='tech-tag'>{tag}</span>)
      }
    </div>
  </div>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    height: auto;
    background: var(--gray-999_40);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    transition: all 0.3s ease;
    position: relative;
  }

  .card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-5px);
  }

  .card-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
    position: relative;
  }

  .card-image :global(.gradient-placeholder) {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: transform 0.5s ease;
  }

  .card:hover .card-image :global(.gradient-placeholder) {
    transform: scale(1.03);
  }

  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: var(--gray-999_40);
    border-top: 1px solid var(--gray-800);
  }

  .title {
    margin: 0 0 0.75rem 0;
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-0);
    line-height: 1.3;
  }

  .description {
    margin: 0 0 1rem 0;
    font-size: var(--text-sm);
    color: var(--gray-300);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid var(--gray-800);
  }

  .tech-tag {
    font-size: var(--text-xs);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background-color: var(--gray-999);
    color: var(--gray-200);
    font-weight: 500;
  }

  @media (min-width: 50em) {
    .card {
      flex-direction: row;
      height: 220px;
      border-radius: 1rem;
    }

    .card-image {
      width: 40%;
      height: 100%;
      min-height: 220px;
    }

    .card-content {
      width: 60%;
      border-top: none;
      border-left: 1px solid var(--gray-800);
      padding: 1.5rem;
    }

    .title {
      font-size: var(--text-xl);
      margin-bottom: 1rem;
    }

    .description {
      font-size: var(--text-md);
      -webkit-line-clamp: 3;
      margin-bottom: 1.25rem;
    }

    .tech-tag {
      font-size: var(--text-sm);
      padding: 0.3rem 0.6rem;
    }
  }
</style>
