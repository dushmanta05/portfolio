---
import type { CollectionEntry } from 'astro:content';
import GradientPlaceholder from '@components/GradientPlaceholder.astro';

interface Props {
  project: CollectionEntry<'blog'>;
}

const { data, slug } = Astro.props.project;
---

<a class='card' href={`/blog/${slug}`}>
  <div class='card-image'>
    <GradientPlaceholder title={data.title} size='small' alt={data.img_alt || data.title} />
  </div>
  <div class='card-content'>
    <h3 class='title'>{data.title}</h3>
    <p class='description'>{data.description.substring(0, 100)}...</p>
    <div class='card-meta'>
      <span class='date'
        >{
          new Date(data.publishDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          })
        }</span
      >
      {data.tags && data.tags.length > 0 && <span class='tag'>{data.tags[0]}</span>}
    </div>
  </div>
</a>

<style>
  :global(.card img[src='/fallback-image.jpg']) {
    @apply bg-customGray-800 object-cover;
  }

  .card {
    @apply flex flex-col rounded-lg overflow-hidden no-underline relative bg-customGray-100 border border-customGray-800 h-full shadow-[var(--shadow-sm)] transition-all duration-300 ease-in-out;
  }

  .card:hover {
    @apply shadow-md;
    transform: translateY(-5px);
  }

  .card-image {
    @apply w-full h-48 overflow-hidden relative;
  }

  .card-image :global(.gradient-placeholder) {
    @apply w-full h-full transition-transform duration-500;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .card:hover .card-image :global(.gradient-placeholder) {
    transform: scale(1.03);
  }

  .card-content {
    @apply p-5 flex flex-col flex-grow;
    background: var(--gradient-subtle);
  }

  .title {
    @apply text-lg font-bold mb-2 text-customGray-0 line-clamp-2;
  }

  .description {
    @apply text-sm mb-3 flex-grow text-customGray-300 line-clamp-3;
  }

  .card-meta {
    @apply flex justify-between items-center text-xs mt-2 pt-2 border-t border-customGray-800 text-customGray-400;
  }

  .date,
  .tag {
    @apply inline-block;
  }

  .tag {
    @apply px-2 py-1 rounded-sm;
    background-color: var(--accent-regular);
    color: white;
  }

  /* Mobile */
  @media (max-width: 40em) {
    .card-image {
      @apply h-44;
    }
  }

  /* Tablet and Desktop */
  @media (min-width: 40em) {
    .card-image {
      @apply h-52 relative;
      min-height: 200px;
    }

    .title {
      @apply text-xl mb-3;
    }

    .description {
      @apply text-base;
    }
  }
</style>
