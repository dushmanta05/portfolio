---
interface Props {
  align?: 'start' | 'center';
}
const { align = 'center' } = Astro.props;
---

<div
  class:list={[
    'hero stack gap-4',
    align === 'center' ? 'text-center lg:text-center' : 'text-left lg:text-left',
  ]}
>
  <div class='stack gap-2 mt-4'>
    <h1
      class:list={[
        'title text-4xl md:text-5xl lg:text-6xl font-bold leading-tight',
        align === 'center' ? 'mx-auto' : 'mx-0',
        'max-w-[37ch]',
      ]}
    >
      I build
      <span class='gradient-text'>fast, efficient, and scalable</span>
      digital experiences
    </h1>
    <p
      class:list={[
        'tagline text-base lg:text-lg font-normal text-[var(--gray-300)]',
        align === 'center' ? 'mx-auto' : 'mx-0',
        'max-w-[37ch] mt-8 mb-2',
      ]}
    >
      Backend-focused. Detail-obsessed.<br /><span class='highlight'>Ready to build the future</span
      >
    </p>
  </div>
  <slot />
</div>

<style>
  .gradient-text {
    background: linear-gradient(to right, #0751cf, #7928ca, #ff0080, #ff4d4d, #ffc700);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .highlight {
    color: var(--accent-regular);
    font-weight: 500;
  }

  .title {
    color: var(--gray-0);
  }

  @supports not (-webkit-background-clip: text) {
    .gradient-text {
      color: var(--accent-regular);
    }
  }
</style>
