---
interface Props {
  title: string;
  subtitle: string;
  align?: 'start' | 'center';
}

const { title, subtitle, align = 'start' } = Astro.props;
---

<header class:list={['page-header', align]}>
  <div class='header-content'>
    <div class='text-content'>
      <h1 class='page-title'>{title}</h1>
      <p class='page-subtitle'>{subtitle}</p>
    </div>
  </div>
</header>

<style>
  .page-header {
    padding: 2rem 0 3rem;
    position: relative;
    text-align: left; /* Default alignment */
  }

  .header-content {
    max-width: 80rem;
    margin: 0 auto;
  }

  .text-content {
    flex: 1;
  }

  .page-title {
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--gray-0);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .page-title {
      font-size: 2.5rem;
    }
  }

  .page-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--gray-300);
    max-width: 75ch;
  }

  @media (min-width: 768px) {
    .page-subtitle {
      font-size: 1.25rem;
    }
  }

  /* Center alignment styles for desktop */
  @media (min-width: 1024px) {
    .center {
      text-align: center;
    }

    .center .page-subtitle {
      margin: 0 auto;
    }
  }

  /* Animation */
  .page-header {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
