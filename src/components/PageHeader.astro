---
interface Props {
  title: string;
  subtitle: string;
  align?: 'start' | 'center';
  showImage?: boolean;
  imageSrc?: string;
  imageAlt?: string;
}

const { title, subtitle, align = 'start', showImage = false, imageSrc, imageAlt } = Astro.props;
---

<header class={`page-header ${align}`}>
  <div class='header-content'>
    <div class='text-content'>
      <h1 class='page-title'>{title}</h1>
      <p class='page-subtitle'>{subtitle}</p>
    </div>
    {
      showImage && imageSrc && (
        <div class='image-container'>
          <img src={imageSrc} alt={imageAlt} class='header-image' width='400' height='300' />
        </div>
      )
    }
  </div>
</header>

<style>
  .page-header {
    padding: 2rem 0 3rem;
    position: relative;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .header-content {
      padding: 0 2rem;
    }
  }

  @media (min-width: 1024px) {
    .header-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 4rem;
    }
  }

  .text-content {
    flex: 1;
  }

  .page-title {
    @apply text-customGray-0 text-3xl font-bold leading-[1.2] mb-4;
  }

  @media (min-width: 768px) {
    .page-title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .page-title {
      font-size: 2.5rem;
    }
  }

  .page-subtitle {
    @apply text-customGray-300 max-w-[70ch] text-base leading-[1.6];
  }

  @media (min-width: 768px) {
    .page-subtitle {
      font-size: 1.25rem;
    }
  }

  .image-container {
    flex-shrink: 0;
    max-width: 400px;
  }

  .header-image {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease;
  }

  .header-image:hover {
    transform: translateY(-4px);
  }

  /* Center alignment styles */
  .center .header-content {
    text-align: center;
  }

  .center .text-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .center .page-subtitle {
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .center .header-content {
      flex-direction: column;
      text-align: center;
    }
  }

  /* Start alignment styles (default) */
  .start .header-content {
    text-align: left;
  }

  /* Animation */
  .page-header {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
