---
import CallToAction from '@components/CallToAction.astro';
import Icon from '@components/Icon.astro';
---

<section class='contact-section'>
  <h2>Interested in working together?</h2>
  <div class='flex justify-center md:justify-end'>
    <CallToAction href='mailto:hello@dushmanta.dev'>
      Send Mail
      <Icon icon='paperPlaneTilt' size='1.2em' />
    </CallToAction>
  </div>
</section>

<style>
  .contact-section {
    @apply mb-12 py-12 md:py-16 px-6 flex flex-col md:flex-row md:items-center md:justify-between gap-6 md:gap-8 text-center md:text-left backdrop-blur bg-[rgba(255,255,255,0.04)] border-t border-b border-[var(--gray-800)];
  }

  .contact-section h2 {
    @apply text-xl md:text-2xl lg:text-3xl font-bold text-[var(--gray-0)] max-w-[20ch] md:max-w-[25ch] mx-auto md:mx-0;
  }
</style>
