---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BlogPreview from '../components/BlogPreview.astro';

import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

const projects = (await getCollection('work'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);

const blogs = (await getCollection('blog'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);

const siteUrl = 'https://dushmanta.dev';
const title = 'Dushmanta | Portfolio';
const description =
  'Personal portfolio showcasing my projects and expertise in software development.';
const ogImage = `${siteUrl}/og-image.png`;
---

<BaseLayout title={title} description={description} image={ogImage}>
  <div class="flex flex-col gap-20 lg:gap-[12rem]">
    <div class="wrapper flex flex-col gap-8 lg:gap-20">
      <header class="text-lg text-left max-w-[80ch] mx-auto">
        <Hero
          title="I build fast, efficient, and scalable digital experiences."
          tagline="Backend-focused. Detail-obsessed. Open to bold ideas."
          align="start"
        >
          <div class="flex flex-col gap-3 mt-4">
            <div class="hidden mt-2 flex gap-2">
              <Pill><Icon icon="code" size="1.33em" /> Developer</Pill>
              <Pill><Icon icon="laptop" size="1.33em" /> Freelancer</Pill>
              <Pill><Icon icon="pencil-line" size="1.33em" /> Tech Blogger</Pill>
            </div>
            <p>
              <small class="text-gray-400">
                Currently building a real-time event-streaming backend for a fintech product.
              </small>
            </p>
          </div>
        </Hero>
      </header>
      <Skills />
    </div>

    <main class="wrapper flex flex-col gap-20 lg:gap-[12rem]">
      <section class="py-16 px-4 my-12 rounded-xl bg-gray-100/40 border border-gray-800">
        <div class="flex flex-row items-center justify-between gap-4 mb-12">
          <div>
            <h3 class="text-2xl font-bold mb-2 text-gray-900">Personal Projects</h3>
            <p class="text-base max-w-[50ch] text-gray-400">
              Take a look some highlighted personal projects, showcasing my skills and passion for
              development.
            </p>
          </div>
          <div class="flex justify-end">
            <a href="/work/" class="flex items-center gap-2 px-2 py-1 rounded-md bg-gradient-to-r from-accent-regular to-accent-dark text-white text-sm hover:-translate-y-0.5 hover:shadow transition">
              View All
              <Icon icon="arrow-right" size="1.2em" />
            </a>
          </div>
        </div>
        <div class="grid gap-8 grid-cols-1 md:grid-cols-2">
          {
            projects.map((project) => (
              <div>
                <PortfolioPreview project={project} />
              </div>
            ))
          }
        </div>
      </section>

      <section class="grid gap-8 relative">
        <header class="justify-self-center text-center max-w-[50ch] text-md text-gray-400 flex flex-col gap-2 lg:gap-4">
          <h3 class="text-2xl lg:text-4xl font-bold">Skills & Expertise</h3>
          <p>
            I specialize in frontend and backend technologies. Below, you can explore my key skills
            and the tools I use to build efficient and scalable solutions.
          </p>
        </header>
        <div>
          <Grid variant="small">
            {
              ['JavaScript', 'Node.js', 'MongoDB', 'Express.js.', 'React'].map((brand) => (
                <li class="flex h-28 md:h-38 items-center justify-center text-center rounded-[1.5rem] md:rounded-3xl shadow-sm border border-gray-800 text-gray-400 bg-gradient-to-br from-gray-100 to-white">
                  <p>{brand}</p>
                </li>
              ))
            }
          </Grid>
        </div>
      </section>

      <section class="py-16 px-4 my-12 rounded-xl bg-gray-100/40 border border-gray-800">
        <div class="flex flex-row items-center justify-between gap-4 mb-12">
          <div>
            <h3 class="text-2xl font-bold mb-2 text-gray-900">Tech Blog</h3>
            <p class="text-base max-w-[50ch] text-gray-400">
              Discover insights, learning, and experiences through my blogs, showcasing my skills
              and passion for development.
            </p>
          </div>
          <div class="flex justify-end">
            <a href="/blog/" class="flex items-center gap-2 px-2 py-1 rounded-md bg-gradient-to-r from-accent-regular to-accent-dark text-white text-sm hover:-translate-y-0.5 hover:shadow transition">
              View All
              <Icon icon="arrow-right" size="1.2em" />
            </a>
          </div>
        </div>
        <div class="grid gap-6 grid-cols-1 md:grid-cols-3">
          {
            blogs.slice(0, 3).map((blog) => (
              <div>
                <BlogPreview project={blog} />
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .hero {
    font-size: var(--text-lg);
    text-align: start;
    max-width: 80ch;
    margin-inline: auto;
  }

  .title {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--gray-0);
    line-height: 1.2;
  }

  .tagline {
    @apply text-base;
    color: var(--gray-300);
    font-weight: 400;
  }

  .roles {
    @apply hidden;
  }

  .hero img {
    @apply aspect-[5/4] object-cover object-top rounded-[1.5rem] shadow-md;
  }

  @media (min-width: 50em) {
    .hero {
      font-size: var(--text-xl);
    }

    .title {
      font-size: var(--text-3xl);
    }

    .tagline {
      font-size: var(--text-lg);
    }

    .roles {
      @apply mt-2 flex gap-2;
    }
  }

  .section {
    @apply grid gap-8;
  }

  .with-background {
    @apply relative;
  }

  .with-background::before {
    @apply absolute left-1/2 top-0 w-[100vw] z-[-1];
    --hero-bg: var(--bg-image-subtle-2);

    content: '';
    pointer-events: none;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background:
      var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: overlay, normal, normal, normal;
    mix-blend-mode: var(--bg-blend-mode);
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    @apply justify-self-center text-center max-w-[50ch];
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      @apply text-4xl-custom;
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }

    .gallery {
      grid-area: gallery;
    }

    .cta {
      grid-area: cta;
    }
  }

  /* ====================================================== */

  .mention-card {
    @apply flex h-[7rem] items-center justify-center text-center rounded-[1.5rem] shadow-sm;
    border: 1px solid var(--gray-800);
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
  }

  @media (min-width: 50em) {
    .mention-card {
      @apply h-[9.5rem] rounded-3xl;
    }
  }

  /* Blog Section Styles */
  .blog-section {
    @apply py-16 px-4 my-12 rounded-xl;
    background: var(--gray-999_40);
    border: 1px solid var(--gray-800);
  }

  .blog-section-header {
    @apply flex flex-row items-center justify-between gap-4 mb-12;
  }

  .header-content h3 {
    @apply text-2xl font-bold mb-2;
    color: var(--gray-0);
  }

  .header-content p {
    @apply text-base max-w-[50ch];
    color: var(--gray-300);
  }

  .blog-gallery {
    @apply grid gap-6 grid-cols-1;
  }

  .blog-card-container {
    @apply w-full;
  }

  .blog-cta {
    @apply w-auto flex justify-end;
  }

  .view-all-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    border-radius: 0.5rem;
    background: var(--gradient-accent-cta);
    color: var(--accent-text-over);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .view-all-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  /* Tablet view */
  @media (min-width: 40em) and (max-width: 64em) {
    .blog-section {
      @apply px-6 rounded-xl;
    }

    .blog-gallery {
      @apply grid-cols-2 gap-6;
    }
  }

  /* Desktop view */
  @media (min-width: 64em) {
    .blog-section {
      @apply px-8 rounded-xl;
    }

    .blog-section-header {
      @apply justify-between items-center;
    }

    .blog-gallery {
      @apply grid-cols-3 gap-8;
    }

    .view-all-link {
      font-size: var(--text-md);
      padding: 0.5rem 1rem;
    }
  }

  /* Project Section Styles */
  .project-section {
    @apply py-16 px-4 my-12 rounded-xl;
    background: var(--gray-999_40);
    border: 1px solid var(--gray-800);
  }

  .project-section-header {
    @apply flex flex-row items-center justify-between gap-4 mb-12;
  }

  .project-section .header-content h3 {
    @apply text-2xl font-bold mb-2;
    color: var(--gray-0);
  }

  .project-section .header-content p {
    @apply text-base max-w-[50ch];
    color: var(--gray-300);
  }

  .project-gallery {
    @apply grid gap-8 grid-cols-1;
  }

  .project-card-container {
    @apply w-full;
  }

  .project-cta {
    @apply w-auto flex justify-end;
  }

  /* Tablet view */
  @media (min-width: 40em) and (max-width: 64em) {
    .project-section {
      @apply px-6 rounded-xl;
    }

    .project-gallery {
      @apply grid-cols-1 gap-8;
    }
  }

  /* Desktop view */
  @media (min-width: 64em) {
    .project-section {
      @apply px-8 rounded-xl;
    }

    .project-section-header {
      @apply justify-between items-center;
    }

    .project-gallery {
      @apply grid-cols-2 gap-8;
    }
  }
</style>
