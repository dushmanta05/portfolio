---
import { getCollection } from 'astro:content';

import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
import Icon from '@components/Icon.astro';
import Pill from '@components/Pill.astro';
import ProjectsSection from '@components/ProjectsSection.astro';
import BlogPreview from '@components/BlogPreview.astro';
import CallToAction from '@components/CallToAction.astro';
import ContactCTA from '@components/ContactCTA.astro';
import SkillsSection from '@components/SkillsSection.astro';
import OSSContributions from '@components/OSSContributions.astro';
import Skills from '@components/Skills.astro';
import SectionDivider from '@components/common/SectionDivider.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const blogs = (await getCollection('blog')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const siteUrl = 'https://dushmanta.dev';
const title = 'Dushmanta | Full-Stack Developer Portfolio';
const description =
  'Personal portfolio showcasing my projects and expertise in software development.';
const ogImage = `${siteUrl}/og-image.png`;
---

<BaseLayout title={title} description={description} image={ogImage}>
  <div class='wrapper'>
    <div class='flex flex-col gap-20 lg:gap-32'>
      <!-- Hero Section -->
      <div>
        <header class='hero-container mt-12 mx-auto'>
          <Hero align='center'>
            <div class='pills-container'>
              <Pill><Icon icon='code' size='1.33em' /> Developer</Pill>
              <Pill><Icon icon='laptop' size='1.33em' /> Freelancer</Pill>
              <Pill><Icon icon='pencil' size='1.33em' /> Tech Blogger</Pill>
            </div>
          </Hero>
        </header>
        <Skills />
        <div class='hidden lg:flex justify-center mt-16 animate-fadeIn'>
          <Icon
            color='var(--accent-regular)'
            icon='chevronDoubleDown'
            class='transform rotate-[-45deg] animate-bounce'
            size='1.5rem'
          />
        </div>
      </div>

      <!-- Projects Section -->
      <section class='content-section'>
        <div class='section-header'>
          <div class='header-content'>
            <h3 class='section-title text-3xl mb-4'>Personal Projects</h3>
            <p class='section-description text-base'>
              Take a look at my featured projects showcasing my skills and passion for development.
            </p>
          </div>
          <div class='section-cta'>
            <CallToAction href='/work/#all-projects'>
              View All
              <Icon icon='arrowRight' size='1em' />
            </CallToAction>
          </div>
        </div>
        <ProjectsSection projects={projects} featuredCount={4} />
      </section>

      <!-- Skills Section -->
      <section>
        <SkillsSection />
      </section>

      <!-- Blog Section -->
      <section class='content-section'>
        <div class='section-header'>
          <div class='header-content'>
            <h3 class='section-title text-3xl mb-4'>Tech Blog</h3>
            <p class='section-description text-base'>
              Dive into my technical insights, learning, and experiences from the world of
              development.
            </p>
          </div>
          <div class='section-cta'>
            <CallToAction href='/blog/'>
              View All
              <Icon icon='arrowRight' size='1em' />
            </CallToAction>
          </div>
        </div>
        <div class='blogs-grid'>
          {
            blogs.slice(0, 3).map((blog) => (
              <div class='blog-card'>
                <BlogPreview project={blog} />
              </div>
            ))
          }
        </div>
      </section>

      <!-- OSS Contributions -->
      <section>
        <OSSContributions />
      </section>

      <SectionDivider />
      <ContactCTA />
    </div>
  </div>
</BaseLayout>

<style>
  /* Hero Section Styles */
  .hero-container {
    text-align: center;
    max-width: 80ch;
    padding: 2rem 0;
  }

  .pills-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
    margin-top: 1.5rem;
  }

  @media (max-width: 1024px) {
    .hero-container {
      text-align: left;
    }
    .pills-container {
      justify-content: flex-start;
    }
  }

  /* Content Sections */
  .content-section {
    padding: 3rem 1.5rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--gray-800);
    backdrop-filter: blur(10px);
  }

  .section-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .section-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .header-content h3 {
    font-weight: 700;
    color: var(--gray-0);
  }

  .header-content p {
    max-width: 50ch;
    color: var(--gray-300);
  }

  .section-cta {
    display: flex;
    justify-content: flex-start;
  }

  @media (min-width: 768px) {
    .section-cta {
      justify-content: flex-end;
    }
  }

  /* Blog Grid */
  .blogs-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 1024px) {
    .blogs-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .blog-card {
    transition: transform 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
  }

  /* Enhanced animations */
  .content-section,
  .skills-section,
  .oss-section {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
