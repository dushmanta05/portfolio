---
import { getCollection } from 'astro:content';

import BaseLayout from '@layouts/BaseLayout.astro';
import ContactCTA from '@components/ContactCTA.astro';
import PortfolioPreview from '@components/PortfolioPreview.astro';
import PageHeader from '@components/PageHeader.astro';
import Grid from '@components/Grid.astro';

const projects = (await getCollection('work')).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
  title='My Work | Dushmanta'
  description="Explore Dushmanta's portfolio of projects showcasing full-stack development expertise"
>
  <div class='stack gap-20'>
    <main class='wrapper stack gap-12'>
      <PageHeader
        title='My Work'
        subtitle='From concept to deployment, here are some of my most impactful projects that demonstrate my expertise in full-stack development.'
        align='start'
      />

      <section class='projects-grid'>
        <Grid variant='offset'>
          {
            projects.map((project) => (
              <li class='project-item'>
                <PortfolioPreview project={project} />
              </li>
            ))
          }
        </Grid>
      </section>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .projects-grid {
    margin-top: 1rem;
  }

  .project-item {
    transition: transform 0.3s ease;
  }

  .project-item:hover {
    transform: translateY(-4px);
  }
</style>
